/* 支付选择弹框 */

.projectile {
  width: 100%;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2;
}

/* 支付弹框 */

.zhifu {
  width: 100%;
  height: 90rpx;
  background-color: #4b2feb;
  line-height: 90rpx;
  text-align: center;
  font-size: 40rpx;
  color: white;
}

.yhkxz image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.yhkxz {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f1f1;
  padding: 20rpx 0 20rpx 0;
}

.wxjuz {
  display: flex;
  align-items: center;
}

